<script>
  // Fun√ß√£o de subscribe reutiliz√°vel
  async function subscribeEmail(email: string, source: string): Promise<boolean> {
    try {
      const res = await fetch('https://yvhtpboejndktqoxbnbn.supabase.co/rest/v1/ai_digest_subscribers', {
        method: 'POST',
        headers: {
          'Content-Type': 'application/json',
          'apikey': 'eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.eyJpc3MiOiJzdXBhYmFzZSIsInJlZiI6Inl2aHRwYm9lam5ka3Rxb3hibmJuIiwicm9sZSI6ImFub24iLCJpYXQiOjE3NjMyMzYyMDMsImV4cCI6MjA3ODgxMjIwM30.M6PxISn2BjdJRRcsJoRQBVcVL4kjTGuQN53c98BbqSc',
        },
        body: JSON.stringify({ email, source }),
      });

      if (res.ok) {
        // Track conversion no Facebook Pixel
        if (typeof fbq !== 'undefined') {
          fbq('track', 'Lead', { content_name: 'AI Digest Newsletter' });
        }
        // Marcar como inscrito no localStorage
        localStorage.setItem('ai_digest_subscribed', 'true');
        return true;
      }
      return false;
    } catch {
      return false;
    }
  }

  // Handler gen√©rico para formul√°rios
  function setupForm(formId: string, source: string) {
    const form = document.getElementById(formId);
    form?.addEventListener('submit', async (e) => {
      e.preventDefault();
      const email = new FormData(form as HTMLFormElement).get('email') as string;
      const button = form.querySelector('button[type="submit"]') as HTMLButtonElement;
      const originalText = button.textContent;

      button.textContent = 'Enviando...';
      button.disabled = true;

      const success = await subscribeEmail(email, source);

      if (success) {
        alert('Inscricao confirmada! Bem-vindo ao AI Digest');
        (form as HTMLFormElement).reset();
        // Fechar popup se estiver aberto
        const popup = document.getElementById('exit-popup');
        if (popup) popup.classList.add('hidden');
        popup?.classList.remove('flex');
      } else {
        alert('Erro ao inscrever. Tente novamente.');
      }

      button.textContent = originalText;
      button.disabled = false;
    });
  }

  // Setup de todos os formul√°rios
  setupForm('hero-form', 'hero_form');
  setupForm('newsletter-form', 'landing_page');
  setupForm('popup-form', 'exit_popup');

  // Exit Intent Popup
  const popup = document.getElementById('exit-popup');
  const closeBtn = document.getElementById('close-popup');
  let popupShown = false;

  // Mostrar popup quando mouse sai da p√°gina (desktop)
  document.addEventListener('mouseout', (e) => {
    if (
      !popupShown &&
      !localStorage.getItem('ai_digest_subscribed') &&
      !localStorage.getItem('ai_digest_popup_closed') &&
      e.clientY < 10
    ) {
      popup?.classList.remove('hidden');
      popup?.classList.add('flex');
      popupShown = true;
    }
  });

  // Fechar popup
  closeBtn?.addEventListener('click', () => {
    popup?.classList.add('hidden');
    popup?.classList.remove('flex');
    localStorage.setItem('ai_digest_popup_closed', 'true');
  });

  // Fechar ao clicar fora
  popup?.addEventListener('click', (e) => {
    if (e.target === popup) {
      popup.classList.add('hidden');
      popup.classList.remove('flex');
      localStorage.setItem('ai_digest_popup_closed', 'true');
    }
  });
</script>
