---
import BaseLayout from './BaseLayout.astro';
import type { CollectionEntry } from 'astro:content';

interface Props {
  article: CollectionEntry<'articles'>;
}

const { article } = Astro.props;
const { title, description, pubDate, category, originalUrl, author, readingTime, tags } = article.data;

const categoryLabels: Record<string, { label: string; color: string }> = {
  news: { label: 'Not√≠cia', color: 'bg-blue-100 text-blue-800' },
  paper: { label: 'Paper', color: 'bg-purple-100 text-purple-800' },
  repo: { label: 'Reposit√≥rio', color: 'bg-green-100 text-green-800' },
  analysis: { label: 'An√°lise', color: 'bg-orange-100 text-orange-800' },
};

const cat = categoryLabels[category] || categoryLabels.news;

const formattedDate = pubDate.toLocaleDateString('pt-BR', {
  year: 'numeric',
  month: 'long',
  day: 'numeric',
});
---

<BaseLayout title={title} description={description}>
  <article class="max-w-3xl mx-auto px-4 py-8">
    <!-- Breadcrumb -->
    <nav class="text-sm text-gray-500 mb-6">
      <a href="/" class="hover:text-primary">In√≠cio</a>
      <span class="mx-2">/</span>
      <a href="/artigos" class="hover:text-primary">Artigos</a>
      <span class="mx-2">/</span>
      <span class="text-gray-700">{title.substring(0, 40)}...</span>
    </nav>

    <!-- Header -->
    <header class="mb-8">
      <div class="flex items-center gap-3 mb-4">
        <span class={`px-3 py-1 rounded-full text-xs font-medium ${cat.color}`}>
          {cat.label}
        </span>
        {readingTime && (
          <span class="text-gray-500 text-sm">‚è±Ô∏è {readingTime}</span>
        )}
      </div>

      <h1 class="text-3xl md:text-4xl font-bold text-gray-900 mb-4 leading-tight">
        {title}
      </h1>

      <p class="text-xl text-gray-600 mb-6">
        {description}
      </p>

      <div class="flex items-center gap-4 text-sm text-gray-500 border-b pb-6">
        <span>Por <strong class="text-gray-700">{author}</strong></span>
        <span>‚Ä¢</span>
        <time datetime={pubDate.toISOString()}>{formattedDate}</time>
      </div>
    </header>

    <!-- Content -->
    <div class="prose prose-lg prose-gray max-w-none
      prose-headings:text-gray-900 prose-headings:font-bold
      prose-a:text-primary prose-a:no-underline hover:prose-a:underline
      prose-blockquote:border-l-primary prose-blockquote:bg-gray-50 prose-blockquote:py-1 prose-blockquote:px-4
      prose-code:bg-gray-100 prose-code:px-1 prose-code:rounded
      prose-pre:bg-gray-900
    ">
      <slot />
    </div>

    <!-- Tags -->
    {tags.length > 0 && (
      <div class="mt-8 pt-6 border-t">
        <div class="flex flex-wrap gap-2">
          {tags.map((tag) => (
            <span class="bg-gray-100 text-gray-700 px-3 py-1 rounded-full text-sm">
              #{tag}
            </span>
          ))}
        </div>
      </div>
    )}

    <!-- Source -->
    {originalUrl && (
      <div class="mt-8 p-4 bg-gray-50 rounded-lg border">
        <p class="text-sm text-gray-600">
          üìÑ <strong>Fonte original:</strong>{' '}
          <a href={originalUrl} target="_blank" rel="noopener noreferrer" class="text-primary hover:underline">
            {new URL(originalUrl).hostname}
          </a>
        </p>
      </div>
    )}

    <!-- CTA Newsletter -->
    <div class="mt-12 p-6 bg-gradient-to-r from-dark to-darker rounded-xl text-white text-center">
      <h3 class="text-xl font-bold mb-2">Gostou deste artigo?</h3>
      <p class="text-gray-300 mb-4">Receba an√°lises como esta todos os dias no seu email.</p>
      <a href="/#newsletter" class="inline-block bg-primary hover:bg-purple-600 text-white font-semibold px-6 py-3 rounded-lg transition">
        Assinar AI Digest
      </a>
    </div>
  </article>
</BaseLayout>
